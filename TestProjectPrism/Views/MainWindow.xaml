<Window x:Class="TestProjectPrism.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="1000" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ContentControl prism:RegionManager.RegionName="ResultRegion" Grid.Row="0"/>
        <ContentControl prism:RegionManager.RegionName="ControlsRegion" Grid.Row="1"/>
    </Grid>
</Window>
